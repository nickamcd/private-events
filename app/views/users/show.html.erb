<div class="section">
  <div class="container">
	  <div class="columns is-centered">
      <div class="column is-9">
        <h1 class="title is-2 is-spaced has-text-centered"><%= @user.username %>'s Profile</h1>

        <div class="column has-text-centered">
            <h3 class="subtitle is-3">Upcoming Events: <%= @user.events.future.count %></h3>
            <ul>
              <% if @user.events.future.count.zero? %>
                <p>No planned parties</p>
              <% else %>
                <% @user.attended_events.where('date >= ?', Date.today).each do |event| %>
                  <li class="has-text-centered"><%=link_to event.name, event_path(event) %></li>
                <% end %>
              <% end %>
            </ul>
          </div>

        <div id="navbar" class="navbar">
          <p class="control">
          </p>
          <% if user_signed_in? %>
            <p class="control">
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "button is-info" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
       